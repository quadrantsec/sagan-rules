# rules by "Bryant Smith" <bsmith@quadrantsec.com>
# 12/07/2023

alert any $HOME_NET any -> $HOME_NET any (msg:"[AWS-SIGNIN] Multiple Failed Console Login Attempts - Brute Force"; program:signin.amazonaws.com; json_content:".eventName","ConsoleLogin"; json_content:".responseElements.ConsoleLogin","Failure"; json_map:"src_ip",".sourceIPAddress"; after:track by_src, count 10, seconds 300; threshold:type suppress,track by_src,count 1, seconds 86400; xbits:set,brute-force,track ip_src,expire 28800; classtype:attempted-user; sid:5014083; rev:1; metadata:deployment Server,affected_product NONE,affected_version NONE,mitigation NONE,deprecation_reason NONE,tag NONE, created_at 2023_12_07, updated_at 2023_12_07, mitre_tactic_id TA0006, mitre_technique_id T1110;)

alert any $HOME_NET any -> $HOME_NET any (msg:"[AWS-SIGNIN] Successful Console Login After Brute Force"; program:signin.amazonaws.com; json_content:".eventName","ConsoleLogin"; json_content:".responseElements.ConsoleLogin","Success"; json_map:"src_ip",".sourceIPAddress"; xbits:isset,brute-force,track ip_src; classtype:successful-user; sid:5014084; rev:1; metadata:deployment Server,affected_product NONE,affected_version NONE,mitigation NONE,deprecation_reason NONE,tag NONE, created_at 2023_12_07, updated_at 2023_12_07, mitre_tactic_id TA0006, mitre_technique_id T1110;)

alert any $HOME_NET any -> $HOME_NET any (msg:"[AWS-SIGNIN] Successful Console Login from Outside Home Country"; program:signin.amazonaws.com; json_content:".eventName","ConsoleLogin"; json_content:".responseElements.ConsoleLogin","Success"; json_map:"src_ip",".sourceIPAddress"; country_code:track by_src,isnot $HOME_COUNTRY; classtype:successful-user; sid:5014085; rev:1; metadata:deployment Server,affected_product NONE,affected_version NONE,mitigation NONE,deprecation_reason NONE,tag NONE, created_at 2023_12_07, updated_at 2023_12_07, mitre_tactic_id TA0006, mitre_technique_id T1110;)

