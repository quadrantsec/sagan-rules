#alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[GCP] User was Created"; content: "cloudaudit.googleapis.com"; content: "google.admin.AdminService.createUser"; classtype: system-event; parse_src_ip: 1; sid: 5006025; rev:2;)

