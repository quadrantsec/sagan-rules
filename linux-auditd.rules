alert any $HOME_NET any -> $HOME_NET any (msg:"[LINUX-AUDITD] Failed SUDO SU Command"; content:"type=USER_CMD"; content:"cmd=|22|su|22|"; content:"exe=|22|/usr/bin/sudo|22|"; content:"res=failed"; reference:url,https://pberba.github.io/security/2021/11/23/linux-threat-hunting-for-persistence-account-creation-manipulation/; classtype:trojan-activity; sid:5014602; rev:1; metadata:deployment Server,affected_product NONE,affected_version NONE,mitigation NONE,deprecation_reason NONE,tag NONE, created_at 2024_01_25, updated_at 2024_01_25, mitre_tactic_id TA0003, mitre_technique_id T1136.001;)
