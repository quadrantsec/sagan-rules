alert any $HOME_NET any -> $HOME_NET any (msg:"[MIMECAST] Inbound Connection From Suspicious IP"; program:mimecast; json_content:".eventType","receipt"; json_meta_content:".direction",inbound,external; json_content:".action","Acc"; parse_src_ip:1; json_map:"src_ip",".senderIp"; bluedot:type ip_reputation, track by_src,none,Malicious; reference:url,https://developer.services.mimecast.com/siem-tutorial-cg; classtype:suspicious-activity; sid:5017362; rev:1; metadata:created_at 2026_01_16, updated_at 2026_01_16;)

alert any $HOME_NET any -> $HOME_NET any (msg:"[MIMECAST] Internal/Outbound Virus Found and Rejected"; program:mimecast; json_content:".eventType","receipt"; json_meta_content:".direction",outbound,internal; json_content:".action","Rej"; parse_src_ip:1; json_map:"src_ip",".senderIp"; reference:url,https://developer.services.mimecast.com/siem-tutorial-cg; classtype:suspicious-activity; sid:5017363; rev:1; metadata:created_at 2026_01_16, updated_at 2026_01_16;)

alert any $HOME_NET any -> $HOME_NET any (msg:"[MIMECAST] Internal/Outbound Virus Found and Accepted"; program:mimecast; json_content:".eventType","receipt"; json_meta_content:".direction",outbound,internal; json_content:".action","Acc"; content:!"virusFound|22 3a| null"; content:!"Policy level Anti-Spoofing applied"; parse_src_ip:1; json_map:"src_ip",".senderIp"; reference:url,https://developer.services.mimecast.com/siem-tutorial-cg; classtype:suspicious-activity; sid:5017364; rev:1; metadata:created_at 2026_01_16, updated_at 2026_01_16;)

