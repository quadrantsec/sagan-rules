#
# These rules are for the Office 365 Management API
# https://docs.microsoft.com/en-us/office/office-365-management-api/office-365-management-apis-overview
#
# These rules work best with a JSON input map.  See the "msapi" mapping.  See the Sagan
# JSON documentation for more information
#

alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[MSAPI-AZUREAD] User Login Failed - Brute Force [10/1]"; program:AzureActiveDirectory; json_meta_content:".ErrorNumber",50034,50053,50055,50057,50126,50135; json_content:".Operation","UserLoginFailed"; after: track by_src, count 5, seconds 300; threshold: type suppress, track by_src, count 1, seconds 86400; xbits: set,brute_force,track ip_src,expire 86400; json_map: "src_ip", ".ClientIP"; json_map: "dest_ip", ".ClientIP"; json_map: "username", ".UserId"; json_map: "program",".Workload"; reference:url,https://login.microsoftonline.com/error; classtype: brute-force; sid:5004858; rev:5; metadata:updated_at 2023_08_01, mitre_technique_id T1078, mitre_technique_id T1110;)

alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[MSAPI-AZUREAD] Successful Login after Brute Force"; program:AzureActiveDirectory; content:"ClientIP"; json_content:".Operation","UserLoggedIn"; xbits:isset,brute_force,track ip_src; json_map: "src_ip", ".ClientIP"; json_map: "dest_ip", ".ClientIP"; json_map: "username", ".UserId"; json_map: "program",".Workload"; xbits_pause:1; classtype:correlated-attack; sid:5013580; rev:2; metadata:updated_at 2023_08_01, mitre_technique_id T1078, mitre_technique_id T1110;)

alert any any any -> any any (msg: "[MSAPI-AZUREAD] Global Administrator role assigned to Member"; program:AzureActiveDirectory; json_content: ".Operation", "Add member to role."; content: "Global Administrator"; classtype: suspicious-traffic; reference: url,www.learn.microsoft.com/en-us/azure/role-based-access-control/rbac-and-directory-admin-roles; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid: 5014644; metadata: created_on 2024_05_09, mitre_technique_id T1136, updated_on 2024_06_06; rev:5;)
alert any any any -> any any (msg: "[MSAPI-AZUREAD] Security Operator role assigned to Member"; program:AzureActiveDirectory; content: "Add member to role"; content: "Security Operator"; classtype: suspicious-traffic; reference: url, www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/permissions-reference; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid: 5014645; metadata: created_on 2024_05_09, mitre_technique_id T1136, updated_on 2024_05_10; rev:4;)
alert any any any -> any any (msg: "[MSAPI-AZUREAD] Security Administrator role assigned to Member"; program:AzureActiveDirectory; content: "Add member to role"; content: "Security Administrator"; classtype: suspicious-traffic; reference: url, www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/permissions-reference; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid: 5014646; metadata: created_on 2024_05_09, mitre_technique_id T1136, updated_on 2024_05_10; rev:4;)
alert any any any -> any any (msg: "[MSAPI-AZUREAD] User Administrator role assigned to Member"; program:AzureActiveDirectory; content: "Add member to role"; content: "User Administrator"; classtype: suspicious-traffic; reference: url,www.learn.microsoft.com/en-us/azure/role-based-access-control/rbac-and-directory-admin-roles; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid: 5014647; metadata: created_on 2024_05_09, mitre_technique_id T1136, updated_on 2024_05_10; rev:4;)
alert any any any -> any any (msg: "[MSAPI-AZUREAD] Partner Tier2 Support role assigned to Member"; program: AzureActiveDirectory; content: "Add member to role"; content: "Partner Tier2 Support"; classtype: suspicious-traffic; reference: url,www.posts.specterops.io/microsoft-breach-what-happened-what-should-azure-admins-do-da2b7e674ebc; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/permissions-reference; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid:5014656; metadata: created_on 2024_05_15, mitre_technique_id T1136; rev:3;)
alert any any any -> any any (msg: "[MSAPI-AZUREAD] Privileged Role Administrator role assigned to Member"; program: AzureActiveDirectory; content: "Add member to role"; content: "Privileged Role Administrator"; classtype: suspicious-traffic; reference: url,www.posts.specterops.io/microsoft-breach-what-happened-what-should-azure-admins-do-da2b7e674ebc; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/permissions-reference; reference: url,www.learn.microsoft.com/en-us/entra/identity/role-based-access-control/best-practices; sid:5014657; metadata: created_on 2024_05_15, mitre_technique_id T1136; rev:3;)

#bs 2024-06-21
alert any $HOME_NET any -> $EXTERNAL_NET any (msg: "[MSAPI-AZUREAD] Failed MFA from Outside HOME_COUNTRY"; program:AzureActiveDirectory; json_meta_content:".ErrorNumber",50074; json_content:".Operation","UserLoginFailed"; country_code:track by_src,isnot $HOME_COUNTRY; after: track by_src&by_username, count 2, seconds 300; threshold: type suppress, track by_src&by_username, count 1, seconds 3600; json_map:"src_ip", ".ClientIP"; json_map:"dest_ip", ".ClientIP"; json_map:"username", ".UserId"; json_map:"program",".Workload"; reference:url,https://learn.microsoft.com/en-us/entra/identity-platform/reference-error-codes; reference:url,https://login.microsoftonline.com/error; classtype: brute-force; sid:5014686; rev:1; metadata:updated_at 2024_05_29;)
